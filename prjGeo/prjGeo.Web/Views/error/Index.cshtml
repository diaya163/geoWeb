@{
    ViewBag.Title = "404";
    Layout = "~/Views/Shared/_Index_Layout.cshtml";
}
 
<html>
<head>
    <meta name="viewport" content="width=device-width" />    
    <script src="~/jquery-easyui-1.5/locale/easyui-lang-zh_CN.js"></script>
    <link href="~/Content/mainPic.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
    <script type="text/javascript">
        $(function () {
            var w = $("#demo1").width();//容器宽度
            $("#demo1 img").each(function () {//如果有很多图片，我们可以使用each()遍历
                var img_w = $(this).width();//图片宽度
                var img_h = $(this).height();//图片高度
                if (img_w > w) {//如果图片宽度超出容器宽度--要撑破了
                    var height = (w * img_h) / img_w; //高度等比缩放
                    $(this).css({ "width": w, "height": height });//设置缩放后的宽度和高度
                }
            });
        });

    </script>
</head>
<body>
    <div id="demo1" class="errorpic" style="width: 100%; height: 100%; display: block;" >         
        <img src="~/Content/imgs/404.png" id="errorpic" style="border:none;background-repeat:no-repeat" />
    </div>
